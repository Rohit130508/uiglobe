<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:fitsSystemWindows="true"
        android:elevation="7dp"
        android:theme="@style/AppTheme_AppBar"
        tools:ignore="UnusedAttribute">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme_AppBar" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="325dp">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_below="@+id/cardImgPro"
                    android:id="@+id/txt_mobileNumber"
                    android:text="@string/app_name"
                    android:layout_marginTop="9dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/raleway"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_below="@+id/txt_mobileNumber"
                    android:id="@+id/txt_emailId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/raleway"
                    android:text="support@uniglobe.com"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImgPro"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="23dp"
                    android:layout_centerHorizontal="true"
                    app:cardElevation="7dp">

                    <ImageView
                        android:id="@+id/imgProfilePicture"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo"
                        tools:ignore="ContentDescription,VectorDrawableCompat" />

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:visibility="gone"
                    android:id="@+id/wallet_bal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </RelativeLayout>




        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/login_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/gallery_dialog"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:elevation="1dp"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"
                        android:text="Login"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"
                        android:text="Create a new account"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/gallery_dialog"
                    android:orientation="vertical"
                    android:elevation="7dp"
                    tools:ignore="UnusedAttribute">




                    <RelativeLayout
                        android:id="@+id/txt_updateProfile"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="17dp"
                        tools:ignore="RtlSymmetry">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="17dp"
                            android:layout_centerVertical="true"
                            android:text="@string/edit_profile"
                            android:fontFamily="@font/raleway"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            tools:ignore="RelativeOverlap" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            app:srcCompat="@drawable/ic_forward" />

                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="40dp"
                            android:background="#F1F1F1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/change_password"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="17dp"
                        tools:ignore="RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="17dp"
                            android:layout_centerVertical="true"
                            android:text="@string/change_password"
                            android:fontFamily="@font/raleway"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            tools:ignore="RelativeOverlap" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            app:srcCompat="@drawable/ic_forward" />

                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="40dp"
                            android:background="#F1F1F1" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/view_profile"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="17dp"
                        tools:ignore="RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="21dp"
                            android:layout_centerVertical="true"
                            android:text="@string/view_profile"
                            android:fontFamily="@font/raleway"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            tools:ignore="RelativeOverlap" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            app:srcCompat="@drawable/ic_forward" />

                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="40dp"
                            android:background="#F1F1F1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/my_orders"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="17dp"
                        tools:ignore="RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="21dp"
                            android:layout_centerVertical="true"
                            android:text="@string/my_orders"
                            android:fontFamily="@font/raleway"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            tools:ignore="RelativeOverlap" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            app:srcCompat="@drawable/ic_forward" />

                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="40dp"
                            android:background="#F1F1F1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/about"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="17dp"
                        tools:ignore="RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="21dp"
                            android:layout_centerVertical="true"
                            android:text="@string/about_us"
                            android:fontFamily="@font/raleway"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            tools:ignore="RelativeOverlap" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            app:srcCompat="@drawable/ic_forward" />

                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="40dp"
                            android:background="#F1F1F1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/support"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="17dp"
                        tools:ignore="RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="21dp"
                            android:layout_centerVertical="true"
                            android:text="@string/support"
                            android:fontFamily="@font/raleway"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            tools:ignore="RelativeOverlap" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            app:srcCompat="@drawable/ic_forward" />

                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="40dp"
                            android:background="#F1F1F1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/terms"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="17dp"
                        tools:ignore="RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="21dp"
                            android:layout_centerVertical="true"
                            android:text="@string/terms_of_service"
                            android:fontFamily="@font/raleway"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            tools:ignore="RelativeOverlap" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            app:srcCompat="@drawable/ic_forward" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlKYC"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="17dp"
                        tools:ignore="RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="21dp"
                            android:layout_centerVertical="true"
                            android:text="Update KYC"
                            android:fontFamily="@font/raleway"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            tools:ignore="RelativeOverlap" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            app:srcCompat="@drawable/ic_forward" />


                    </RelativeLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/like_the_app"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/gallery_dialog"
                    android:orientation="vertical"
                    android:elevation="7dp"
                    tools:ignore="UnusedAttribute">

                    <RelativeLayout
                        android:id="@+id/review"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="17dp"
                        tools:ignore="RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/write_a_review"
                            android:fontFamily="@font/raleway"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            tools:ignore="RelativeOverlap" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            app:srcCompat="@drawable/ic_forward" />


                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="40dp"
                            android:background="#F1F1F1" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"
                        android:background="#EEEEEE" />

                    <RelativeLayout
                        android:id="@+id/share"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="17dp"
                        tools:ignore="RtlSymmetry">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/spread_the_word"
                            android:fontFamily="@font/raleway"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            tools:ignore="RelativeOverlap" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            app:srcCompat="@drawable/ic_forward" />

                    </RelativeLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sign_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="17dp"
                    android:background="@drawable/gallery_dialog"
                    android:gravity="center"
                    android:padding="13dp"
                    android:text="@string/sign_out"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp"
                    android:fontFamily="@font/raleway"
                    android:elevation="7dp"
                    tools:ignore="UnusedAttribute" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center_horizontal"
                    android:textSize="11sp"
                    android:fontFamily="@font/raleway"
                    android:layout_marginBottom="13dp"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>