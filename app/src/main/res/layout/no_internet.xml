<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/gallery_dialog"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="No Internet"
            android:textAppearance="@style/Base.DialogWindowTitle.AppCompat"
            android:fontFamily="@font/raleway"
            android:textColor="#212121"
            android:textSize="23sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="2dp"
            android:fontFamily="@font/raleway"
            android:text="no_internet_connectivity_detected_please_check_your_internet_connection_and_try_again"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="try_again"
            android:textAllCaps="false"
            android:fontFamily="@font/raleway"
            android:textColor="@color/white"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</LinearLayout>