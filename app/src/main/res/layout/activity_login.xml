<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.LoginActivity"
    android:background="@color/colorPrimaryDark"
    android:weightSum="5">



        <ImageView
            android:visibility="gone"
            android:id="@+id/imgBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_multimedia_option"
            style="@style/BackarrowTheme"
            />


        <ImageView
            android:id="@+id/imgLogo"
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:src="@drawable/logo"
            style="@style/BackarrowTheme"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/app_name"
        android:textSize="17sp"
        android:layout_marginTop="9dp"
        android:textColor="@color/white"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="19dp"
        android:background="@drawable/bottomtocurve">

        <TextView
            android:padding="17dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_medium"
            android:text="Verify Number"
            android:textSize="17sp"
            android:layout_marginTop="9dp"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/imgLogo"
            android:layout_centerHorizontal="true"/>
        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:layout_marginBottom="9dp"
            android:background="@color/colorPrimaryDark"
            android:layout_gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:fontFamily="@font/raleway"
        android:layout_marginTop="17dp"

        android:padding="19dp"
        android:focusable="false"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColorHint="#000000"
        android:drawableEnd="@drawable/ic_play_arrow"
        android:hint="India (+91)" />

    <View
        android:layout_marginTop="9dp"
        android:layout_marginBottom="29dp"

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"/>


    <EditText
        android:id="@+id/edtMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:fontFamily="@font/raleway"
        android:inputType="number"
        android:textSize="17sp"
        android:padding="19dp"
        android:maxLength="10"
        android:textStyle="bold"
        android:textColor="#000000"
        android:hint="Enter Mobile Number" />

    <View
        android:layout_marginTop="9dp"
        android:layout_marginBottom="29dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"/>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:gravity="center"
        android:layout_marginBottom="29dp"
        android:justificationMode="inter_word"
        android:text="We will send you a one time SMS contain a four digit code"
        android:textColorHint="#1E1E1E"
        android:textSize="17sp" />


    <androidx.cardview.widget.CardView

        android:id="@+id/cardNavigate"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="10dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:contentPadding="13dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_right_arrow"/>

    </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>