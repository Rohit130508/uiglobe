<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="uiScrollGesturesDuringRotateOrZoom">false</item>
    </style>


    <style name="AppButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="uiScrollGesturesDuringRotateOrZoom">false</item>
    </style>


    <style name="AppTheme_AppBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/raleway_medium</item>
    </style>



    <style name="BackarrowTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- TEXT VIEW -->

        <style name="TextViewSmall" parent="android:Widget.TextView">
            <item name="android:textColor">@color/black</item>
            <item name="android:textStyle">normal</item>
            <item name="fontFamily">@font/raleway_medium</item>
            <item name="android:textSize">13sp</item>
        </style>

    <style name="TextViewMedium" parent="android:Widget.TextView">
            <item name="android:textColor">@color/black</item>
            <item name="android:textStyle">normal</item>
            <item name="fontFamily">@font/raleway_medium</item>
            <item name="android:textSize">15sp</item>
        </style>

    <style name="TextViewLarge" parent="android:Widget.TextView">
            <item name="android:textColor">@color/black</item>
            <item name="android:textStyle">normal</item>
            <item name="fontFamily">@font/raleway_medium</item>
            <item name="android:textSize">17sp</item>
        </style>

    <style name="TextViewXLarge" parent="android:Widget.TextView">
            <item name="android:textColor">@color/black</item>
            <item name="android:textStyle">normal</item>
            <item name="fontFamily">@font/raleway_medium</item>
            <item name="android:textSize">21sp</item>
        </style>


</resources>
